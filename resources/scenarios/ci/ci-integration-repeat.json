[{
  "test": {
    "type": "repeat",
    "repeatTime": "1m"
  },
  "stopAllLorhammerTime": "0",
  "sleepBeforeCheckTime": "2m",
  "shutdownAllLorhammerTime": "2m",
  "sleepAtEndTime": "0",
  "requieredLorhammer": 1,
  "maxWaitLorhammerTime": "10s",
  "init": [{
    "nsAddress": "127.0.0.1:1700",
    "nbGatewayPerLorhammer": 10,
    "nbNodePerGateway": [50, 50],
    "nbScenarioReplayLaps": 0,
    "scenarioSleepTime": ["10s", "10s"],
    "receiveTimeoutTime": "1s",
    "gatewaySleepTime": ["100ms", "500ms"]
  }],
  "provisioning": {
    "type": "none"
  },
  "check": {
    "type": "prometheus",
    "config": {
      "address": "http://prometheus:9090",
      "checks": [
        {"query": "sum(lorhammer_pushack_long_request) + sum(lorhammer_pushack_durations_count)", "resultMin": 1000, "resultMax": 3000, "description": "nb messages sent"},
        {"query": "count(lorhammer_pushack_durations_count)", "resultMin": 1, "resultMax": 1, "description": "nb lorhammer"},
        {"query": "sum(lorhammer_gateway)", "resultMin": 10, "resultMax": 20, "description": "nb gateways"},
        {"query": "sum(lorhammer_node)", "resultMin": 500, "resultMax": 1000, "description": "nb nodes"}
      ]
    }
  },
  "deploy": {
    "type": "none"
  }
}]